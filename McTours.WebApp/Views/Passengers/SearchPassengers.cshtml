@model SearchPassengerModel
@*tetikleyeceği için modeli göndermesek de olur fakat modeli burada gönderiyoruz ki asp-for kullanıyoruz ve doldurabilmek için bir sonraki ekranı yani
    post ederken bu model işime yarıyacak
*@
<h3>Yolcu Bilgileri</h3>

<div class="row">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <form id="search_passengers_form">
            <div class=" mb-3">
                <label asp-for="IdentityNumber" class="col-form-label">Kimlik No</label>
                <input asp-for="IdentityNumber" type="text" class="form-control" />
            </div>
            <div class=" mb-3">
                <label asp-for="FirstName" class="col-form-label">İsim</label>
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
            <div class=" mb-3">
                <label asp-for="LastName" class="col-form-label">Soyisim</label>
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
            <div class="mb-3 text-end">
                <button id="search_passengers_button" type="button" class="btn btn-outline-success">
                    Ara
                </button>
            </div>
        </form>
    </div>
    <div class="col-12 col-sm-6 col-md-8 col-lg-9">
        <div class="table-responsive ">
            <table id="search_passengers_table" class="table table-bordered">
                <thead>
                    <tr>
                        <th>T.C. Kimlik No</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th class="d-none d-lg-table-cell">Cinsiyet</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>