<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - McTours.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/McTours.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">McTours.WebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="VehicleMakes" asp-action="Index">Markalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="VehicleModels" asp-action="Index">Modeller</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="VehicleDefinitions" asp-action="Index">Araç Özellikleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Index">Araçlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="BusTrips" asp-action="Index">Sefer Bilgisi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Passengers" asp-action="Index">Yolcu Bilgisi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Ajax" asp-action="Index">Ajax</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="FooterClass" style="font-size:xx-small">
        <h5 style="color:#FFFFFF;font-size:medium; font-family:'Segoe UI'">Telif hakkı &copy; 2023 MC Tours </h5>
        <h6 style="color:#FFFFFF;font-size:medium;  font-family:'Segoe UI'">Tüm hakları Esra Şahin'de saklıdır.</h6>
        <h6 style="color:#5CD375;font-size:medium;  font-family:'Segoe UI'">Telefon: (0850) 000 25 25</h6>
       @* <div class="container">
            &copy; 2023 - McTours.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


